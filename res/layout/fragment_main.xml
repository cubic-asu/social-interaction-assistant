<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.capstone.MainActivity$PlaceholderFragment" >

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6" >

        <RadioButton
            android:id="@+id/rbtnEmotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/emotions" />

        <RadioButton
            android:id="@+id/rbtnActionUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_units" />

    </RadioGroup>

    <!--
    <Button
        android:id="@+id/emotionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emotions" 
        android:layout_weight="1"
        android:onClick="initiateApplication"/>

    <Button
        android:id="@+id/actionUnitsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_units"
        android:layout_weight="1"
        android:onClick="initiateApplication"/>-->
    <Button
        android:id="@+id/btnSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/select" 
        android:onClick="initiateApplication"/>

</LinearLayout>